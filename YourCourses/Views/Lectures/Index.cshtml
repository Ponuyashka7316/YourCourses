@model IEnumerable<YourCourses.Models.Lecture>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered">
    <tr>
        <th class="success">
            @Html.DisplayNameFor(model => model.CourseCourseId)
        </th>
        <th class="success">
            @Html.DisplayNameFor(model => model.LectureName)
        </th>
        <th class="active"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseCourseId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LectureName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LectureId }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", new { id=item.LectureId }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.LectureId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
