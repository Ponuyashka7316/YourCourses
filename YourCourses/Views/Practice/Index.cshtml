

@{
    ViewBag.Title = "Пример работы онлайн-компилятора";
}
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/codemirror-2.37/lib/codemirror.js"></script>
<script src="~/Scripts/codemirror-2.37/mode/clike/clike.js" type="text/javascript"></script>
<link href="~/Scripts/codemirror-2.37/lib/codemirror.css" rel="stylesheet" type="text/css" />
<link href="~/Scripts/codemirror-2.37/theme/lesser-dark.css" rel="stylesheet" type="text/css" />

<h2>Проверка кода</h2>

@using (Ajax.BeginForm( "Out", new AjaxOptions
{
    UpdateTargetId = "results",
    LoadingElementId = "loading",
}))
{
    @Html.TextArea("sampleCode", (string)ViewBag.sampleCode, new { rows = "20", cols = "420" })
    <br>
    <input type="submit" class="btn btn-primary"/>
           @*onclick="location.href='@Url.Action("OutPut", "Practice")'"*@ 
      
           <div id="results"></div>
        <div id="loading" style="display:none; color:Red; font-weight:bold;">
            <p>Идет загрузка...</p>
        </div>
}



<script>

    var editor = CodeMirror.fromTextArea(document.getElementById("sampleCode"), {
        lineNumbers: true,
        matchBrackets: true,
        mode: "text/x-csharp",
        compiler: true,
            hint: true,
            //autohint: true,
        theme: "lesser-dark"
        
       
    });
</script> 