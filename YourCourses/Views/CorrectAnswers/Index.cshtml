@model PagedList.IPagedList<YourCourses.Models.CorrectAnswer>
@using PagedList.Mvc;

@{
   
    ViewBag.Title = "Index";
}
<br><br><br>
<h2>Данные по ответам</h2>
@using (Html.BeginForm("Index", "PracticesHome", new { @class = "form-control" }))
{
    <div class="search">
        <input type="search" name="q" placeholder="Поиск..." value="@ViewBag.SStr">
        <input type="submit" value=">">
    </div>
}
<br>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success animated bounceInLeft" })
</p>
<table class="table table-bordered animated zoomIn ">
    <tr>
        <th class="success">
           @Html.Display("Название практики")
        </th>
        <th class="success">
            @Html.Display("Ответ")
        </th>
        <th class="active"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Practices.PracticeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            <div class="btn-group-vertical">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
</div>
</td>
    </tr>
}

</table>
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<style>
    .search {
        width: 300px; /* Ширина поля с кнопкой */
        border: 1px solid #000; /* Параметры рамки */
        min-height: 20px; /* Минимальная высота */
    }

    input[type="search"] {
        border: none; /* Убираем рамку */
        outline: none; /* Убираем свечение в Chrome и Safari */
        -webkit-appearance: none; /* Убираем рамку в Chrome и Safari */
        width: 274px; /* Ширина поля */
        vertical-align: middle; /* Выравнивание по середине */
    }

    input[type="submit"] {
        width: 20px; /* Ширина кнопки */
        height: 30px; /* Высота кнопки */
        border: none; /* Убираем рамку */
        background-color: burlywood; /* Параметры фона */
    }
    li {
        float: left;
        border-right: 0px solid #bbb;
    }

        li:last-child {
            border-right: none;
        }

        li a {
            display: block;
            color: Black;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            li a:hover:not(.active) {
                background-color: #4CAF50;
            }

    .active {
        background-color: #4CAF50;
    }
</style>